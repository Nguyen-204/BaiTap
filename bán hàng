using BTL_Nhom7_CNPM.DatabaseConnect;
using BTL_Nhom7_CNPM.Model;
using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Windows.Forms;

namespace BTL_Nhom7_CNPM.DAO
{
    internal class BanHangDAO
    {
      
        public static List<SanPham> LayDanhSachSanPham()
        {
            List<SanPham> sanPhamList = new List<SanPham>();
            // THAY ĐỔI: Thêm sp.PhanLoai và sp.DonViTinh vào câu query
            string query = @"
        SELECT 
            sp.MaSP, 
            sp.TenSP, 
            sp.GiaBan,
            sp.PhanLoai,    -- Thêm dòng này
            sp.DonViTinh,    -- Thêm dòng này
            ISNULL(SUM(tktl.SoLuongTon), 0) AS SoLuongTonKho
        FROM 
            SanPham sp
        LEFT JOIN 
            TonKhoTheoLo tktl ON sp.MaSP = tktl.MaSP
        GROUP BY 
            sp.MaSP, sp.TenSP, sp.GiaBan, sp.PhanLoai, sp.DonViTinh"; // Thêm vào GROUP BY

            using (SqlConnection connection = ConnectDatabase.GetConnection())
            {
                try
                {
                    if (connection != null)
                    {
                        SqlCommand command = new SqlCommand(query, connection);
                        SqlDataReader reader = command.ExecuteReader();
                        while (reader.Read())
                        {
                            var sanPham = new SanPham
                            {
                                MaSP = reader["MaSP"].ToString(),
                                TenSP = reader["TenSP"].ToString(),
                                GiaBan = Convert.ToDecimal(reader["GiaBan"]),
                                // THAY ĐỔI: Đọc dữ liệu từ các cột mới
                                PhanLoai = reader["PhanLoai"].ToString(),
                                DonViTinh = reader["DonViTinh"].ToString(),
                                SoLuongTonKho = Convert.ToInt32(reader["SoLuongTonKho"])
                            };
                            sanPhamList.Add(sanPham);
                        }
                    }
                }
                catch (Exception ex)
                {
                    MessageBox.Show("Lỗi khi lấy danh sách sản phẩm: " + ex.Message, "Lỗi DAO", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
            return sanPhamList;
        }

        // Lưu hóa đơn
        public static void LuuHoaDon(HoaDon hoaDon)
        {
            string query = "INSERT INTO HoaDon (MaHD, MaTK, NgayBan, TongHD, MaKH, PhuongThucThanhToan) VALUES (@MaHD, @MaTK, @NgayBan, @TongHD, @MaKH, @PhuongThucThanhToan)";
            using (SqlConnection connection = ConnectDatabase.GetConnection())
            {
                SqlCommand command = new SqlCommand(query, connection);
                command.Parameters.AddWithValue("@MaHD", hoaDon.MaHD);
                command.Parameters.AddWithValue("@MaTK", hoaDon.MaTK);
                command.Parameters.AddWithValue("@NgayBan", hoaDon.NgayBan);
                command.Parameters.AddWithValue("@TongHD", hoaDon.TongHD);
                command.Parameters.AddWithValue("@MaKH", (object)hoaDon.MaKH ?? DBNull.Value);
                command.Parameters.AddWithValue("@PhuongThucThanhToan", (object)hoaDon.PhuongThucThanhToan ?? DBNull.Value);
                command.ExecuteNonQuery();
            }
        }


        public static void LuuChiTietHoaDon(ChiTietHoaDon chiTiet)
        {
            string query = "INSERT INTO ChiTietHoaDon (MaCTHD, MaHD, MaSP, SLBan, ThanhTien, MaCTNK, MaDonThuoc) VALUES (@MaCTHD, @MaHD, @MaSP, @SLBan, @ThanhTien, @MaCTNK, @MaDonThuoc)";
            using (SqlConnection connection = ConnectDatabase.GetConnection())
            {
                SqlCommand command = new SqlCommand(query, connection);
                command.Parameters.AddWithValue("@MaCTHD", chiTiet.MaCTHD);
                command.Parameters.AddWithValue("@MaHD", chiTiet.MaHD);
                command.Parameters.AddWithValue("@MaSP", chiTiet.MaSP);
                command.Parameters.AddWithValue("@SLBan", chiTiet.SLBan);
                command.Parameters.AddWithValue("@ThanhTien", chiTiet.ThanhTien);
                command.Parameters.AddWithValue("@MaCTNK", chiTiet.MaCTNK);
                command.Parameters.AddWithValue("@MaDonThuoc", (object)chiTiet.MaDonThuoc ?? DBNull.Value);
                command.ExecuteNonQuery();
            }
        }
        public static void CapNhatSoLuongTonKhoTheoLo(string maCTNK, int soLuongBan)
        {
            // Cập nhật vào bảng TonKhoTheoLo thay vì SanPham
            string query = "UPDATE TonKhoTheoLo SET SoLuongTon = SoLuongTon - @SoLuongBan WHERE MaCTNK = @MaCTNK";
            SqlConnection connection = ConnectDatabase.GetConnection();
            try
            {
                if (connection != null)
                {
                    SqlCommand command = new SqlCommand(query, connection);
                    command.Parameters.AddWithValue("@SoLuongBan", soLuongBan);
                    command.Parameters.AddWithValue("@MaCTNK", maCTNK); // Dùng MaCTNK để xác định đúng lô
                    command.ExecuteNonQuery();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Lỗi khi cập nhật tồn kho theo lô: " + ex.Message);
            }
            finally
            {
                connection.Close();
            }
        }

        // Dán hàm này vào trong class BanHangDAO
        public static List<LoSanPham> LayDanhSachLoTheoSanPham(string maSP)
        {
            var danhSachLo = new List<LoSanPham>();
            string query = @"
        SELECT 
            tktl.MaCTNK, 
            tktl.SoLuongTon, 
            nk.HSD 
        FROM 
            TonKhoTheoLo tktl
        JOIN 
            NhapKho nk ON tktl.MaCTNK = nk.MaCTNK
        WHERE 
            tktl.MaSP = @MaSP AND tktl.SoLuongTon > 0
        ORDER BY 
            nk.HSD ASC"; // Sắp xếp để ưu tiên lô hết hạn trước (FEFO)

            using (var connection = ConnectDatabase.GetConnection())
            {
                try
                {
                    var command = new SqlCommand(query, connection);
                    command.Parameters.AddWithValue("@MaSP", maSP);
                    using (var reader = command.ExecuteReader())
                    {
                        while (reader.Read())
                        {
                            danhSachLo.Add(new LoSanPham
                            {
                                MaCTNK = reader["MaCTNK"].ToString(),
                                SoLuongTon = Convert.ToInt32(reader["SoLuongTon"]),
                                HSD = Convert.ToDateTime(reader["HSD"])
                            });
                        }
                    }
                }
                catch (Exception ex)
                {
                    // Thay vì Console.WriteLine, dùng MessageBox để dễ thấy lỗi hơn
                    MessageBox.Show("Lỗi khi lấy danh sách lô: " + ex.Message, "Lỗi DAO", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
            return danhSachLo;
        }
        // Lấy thông tin sản phẩm từ mã sản phẩm
        public static SanPham LayThongTinSanPham(string maSP)
        {
            SanPham sanPham = null;
            string query = "SELECT * FROM SanPham WHERE MaSP = @MaSP";

            SqlConnection connection = ConnectDatabase.GetConnection();

            try
            {
                if (connection != null)
                {
                    SqlCommand command = new SqlCommand(query, connection);
                    command.Parameters.AddWithValue("@MaSP", maSP);
                    SqlDataReader reader = command.ExecuteReader();

                    if (reader.Read())
                    {
                        sanPham = new SanPham
                        {
                            MaSP = reader["MaSP"].ToString(),
                            TenSP = reader["TenSP"].ToString(),
                            GiaBan = Convert.ToDecimal(reader["GiaBan"])
                        };
                    }
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Lỗi khi lấy thông tin sản phẩm: " + ex.Message);
            }
            finally
            {
                connection.Close();
            }

            return sanPham;
        }
    }
}
